def remote = [:]
remote.name = 'test'
remote.host = '13.233.233.140'
remote.port = 22
remote.allowAnyHosts = true
pipeline {
    agent any
     stages {
        stage('Git Clone') {
            steps {
                // Get some code from a GitHub repository
                git branch: 'main', credentialsId: 'githubcreds', url: 'https://github.com/kamalkaryat/jenkins-demo2'
            }
        }
     stage('Deployment'){
        steps {
            script {
             // move the new changed 
             sh '''
                echo "echo hello world" >> test.sh
                cat test.sh
             '''
             sh 'ls'
             withCredentials([usernamePassword(credentialsId: 'ubuntucred', passwordVariable: 'pass', usernameVariable: 'user')]) {
             remote.user = user
             remote.password = pass
             sshPut remote: remote, from: "index.html", into: "/var/www/html"
             sshPut remote: remote, from: "test.sh", into: "/tmp"
             sshCommand remote: remote, command: "ls /var/www/html && chmod +x /tmp/test.sh"
             sshScript remote: remote, script: 'test.sh'
             }
           }
          }
        }
      }
    }
